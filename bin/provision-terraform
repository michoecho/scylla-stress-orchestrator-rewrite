#!/bin/python3
import sys
import yaml
from sso import terraform

def unify_dicts(list_of_dicts):
    return {k:v for x in list_of_dicts for k,v in x.items()}

def load_yaml(path):
    with open(path) as f:
        return yaml.load(f, Loader=yaml.FullLoader)

def load_yamls(paths):
    return unify_dicts(load_yaml(p) for p in paths)

if len(sys.argv) < 4:
	raise Exception("provision-terraform TERRAFORM_PLAN DEPLOYMENT_NAME CONFIG_FILES")

terraform_plan = sys.argv[1]
deployment_name = sys.argv[2]
config_files = sys.argv[3:]
config = load_yamls(config_files)

terraform.apply(terraform_plan, config, deployment_name)
